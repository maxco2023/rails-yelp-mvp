<h1>Create a new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit %>
<% end %>
<br>
<p><%= link_to "Go back to full list", restaurants_path, class:"btn btn-primary" %></p>
